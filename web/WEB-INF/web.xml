<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>insertionAvis</servlet-name>
        <servlet-class>Servlets.insertionAvis</servlet-class>
        <init-param>
            <param-name>ligneCommande</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>idClient</param-name>
            <param-value>2</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>afficherAvis</servlet-name>
        <servlet-class>Servlets.afficherAvis</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>affichAvisDAO</servlet-name>
        <servlet-class>accesBDD.affichAvisDAO</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertionAvis</servlet-name>
        <url-pattern>/insertionAvis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>afficherAvis</servlet-name>
        <url-pattern>/afficherAvis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>affichAvisDAO</servlet-name>
        <url-pattern>/affichAvisDAO</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
